@model IEnumerable<Voba.Core.Entities.Order>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Siparişlerim </title>

    <!-- Bootstrap CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- DataTables CSS (CDN) -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <div class="container mt-4">
        <h3 class="mb-3">Benim Siparişlerim</h3>

        <table id="ordersTable" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Kullanıcı</th>
                    <th>Sipariş Kodu</th>
                    <th>Adres</th>
                    <th>Sipariş Türü</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.User?.Name</td>
                        <td>@order.OrderCode</td>
                        <td>@order.ShippingAddress</td>
                        <td>@order.OrderType?.Name</td>
                        <td>
                            @switch (order.Status)
                            {
                                case Voba.Core.Enums.OrderStatus.Beklemede:
                                    <span class="badge bg-warning text-dark">Beklemede</span>
                                    break;
                                case Voba.Core.Enums.OrderStatus.İşletmede:
                                    <span class="badge bg-primary">İşletmede</span>
                                    break;
                                case Voba.Core.Enums.OrderStatus.SevkiyataHazır:
                                    <span class="badge bg-info text-dark">Sevkiyata Hazır</span>
                                    break;
                                case Voba.Core.Enums.OrderStatus.TeslimEdildi:
                                    <span class="badge bg-success">Teslim Edildi</span>
                                    break;
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@order.Id">
                                    <i class="fa-solid fa-circle-info"></i> Detay
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <br />
    <br />
    <br />

    <!-- Scripts -->
    <!-- jQuery (CDN) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- Bootstrap Bundle JS (CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- DataTables JS (CDN) -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <!-- Kullanıcı scripti -->
    <script src="~/js/User/UserOrder/index.js"></script>

</body>
</html>
