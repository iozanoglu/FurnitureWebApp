
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewBag.Title - Lorem ipsum</title>


    <!-- Favicon -->
    <link rel="icon" href=" " type="image/x-icon" />

    @RenderSection("HeadContent", required: false)
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css">

</head>
<body>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">

    <!-- HEADER -->
    <header style="font-family: 'Open Sans', sans-serif;">
        <nav class="navbar navbar-expand-lg fixed-top" style="background-color: #1a0f00; border-bottom: 3px solid #ecb800; z-index: 1000;">
            <div class="container">
                <!-- Marka & Slogan -->
                <a class="navbar-brand d-flex flex-column lh-1" asp-controller="Home" asp-action="Index" style="text-decoration: none;">
                    <span class="fw-bold fs-4" style="color: #ecb800;">Lorem ipsum</span>
                    <small class="fw-medium" style="color: #ffffffcc;">Lorem ipsum</small>
                </a>

                <!-- Mobil Menü Butonu -->
                <button class="navbar-toggler text-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <i class="fas fa-bars fs-4"></i>
                </button>

                <!-- Menü ve Kullanıcı -->
                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0 gap-lg-4 text-center">
                        <li class="nav-item"><a class="nav-link nav-item-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                        <li class="nav-item"><a class="nav-link nav-item-link" asp-controller="Home" asp-action="Catalog">Katalog</a></li>
                        <li class="nav-item"><a class="nav-link nav-item-link" asp-controller="Home" asp-action="ContactUs">İletişim</a></li>
                     
                        <li class="nav-item">
                            <a class="nav-link nav-item-link text-warning fw-semibold" asp-controller="UserOrders" asp-action="Create">Sipariş Ver</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link btn btn-sm btn-warning ms-1" href="/Admin/Main">Yönetici Paneli</a>
                            </li>
                        }
                    </ul>

                   @*  <!-- Arama -->
                    <form class="d-flex me-3" role="search">
                        <input class="form-control form-control-sm rounded-pill px-3 border-0" type="search" placeholder="Ara..." />
                    </form> *@

                    <!-- Kullanıcı Menüsü -->
                    @if (Context.User.Identity.IsAuthenticated)
                    {
                        <div class="dropdown">
                            <a class="nav-link dropdown-toggle nav-item-link" href="#" id="userMenu" data-bs-toggle="dropdown">
                                @Context.User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-controller="UserOrders" asp-action="Index">Siparişlerim</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item text-danger" href="/Account/SignOut">Oturumu Kapat</a></li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a class="btn btn-outline-light btn-sm px-3" href="/Account/SignIn">Giriş Yap</a>
                    }
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="/js/popups.js"></script>
    <script src="/js/postRequests.js"></script>
    
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    
    <script src="~/js/site.js" asp-append-version="true"></script>
   
    @await RenderSectionAsync("Scripts", required: false)
    @await Html.PartialAsync("_Footer")

</body>
</html>
