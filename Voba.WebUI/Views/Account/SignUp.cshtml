@model Voba.Core.Entities.User

@{
    ViewData["Title"] = "Üye Ol";
}

<div class="signup-container">
    <div class="signup-card shadow rounded">
        <h4 class="signup-title">Üye Ol</h4>
        <hr />
        <form asp-action="SignUp">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Adınızı girin" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Şifrenizi girin" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" type="email" class="form-control" placeholder="E-posta adresinizi girin" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Phone" class="form-label"></label>
                <input asp-for="Phone" type="tel" class="form-control" placeholder="Telefon numaranızı girin" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <button type="submit" class="btn signup-btn w-100">Kaydol</button>
        </form>
    </div>
</div>
